{
  "compilerOptions": {
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"],
      "@utils": ["./src/utils/*"],
      "@components": ["./src/components/*"],
      "@pages": ["./src/pages/*"],
      "@store": ["./src/store/*"],
      "@types": ["./src/types/*"],
      "@assets": ["./src/assets/*"],
      "@constants": ["./src/constants/*"]
    },
    "jsx": "react",
    "allowJs": true,
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}